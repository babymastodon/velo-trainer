{
  "manifest_version": 3,
  "name": "ZWO Downloader",
  "version": "0.2.0",
  "description": "Download structured Zwift .zwo workouts from TrainerRoad, TrainerDay, and WhatsOnZwift.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Download ZWO",
    "default_icon": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.trainerroad.com/*",
    "https://app.trainerday.com/*",
    "https://app.api.trainerday.com/*",
    "https://whatsonzwift.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.trainerroad.com/*",
        "https://app.trainerday.com/*",
        "https://whatsonzwift.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html"
}
